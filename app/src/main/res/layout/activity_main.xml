<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtView"
        android:text="Membuat Kotak Dialog"
       android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/toastBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:text="@string/toastTextBtn"
        android:layout_centerHorizontal="true"
        android:background="#02fafe"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toastBtn"
        android:id="@+id/listDialogBtn"
        android:layout_centerHorizontal="true"
        android:text="@string/listDialogTextBtn"
        android:textColor="@android:color/white"
        android:background="#0f03fe"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listDialogBtn"
        android:text="@string/exitTextBtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/exitBtn"
        android:textColor="#000"
        android:background="#fe0101"/>

</RelativeLayout>